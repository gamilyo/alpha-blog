
<%=render 'shared/errors', obj: @user %>
<div class = 'row' >
  <div class = 'col-xs-8 col-xs-offset-2'>
<%= form_for @user do |f| %>
    <div class ="form-group">
      <div class ="control-label col-sn-2">
        <%= f.label :username %>
      </div>
    <div class ="col-sn-6">

   <%= f.text_field :username,class:"form-control",placeholder:"Enter user Name",autofocus: true %>
   </div>
</div>
<div class ="form-group">
  <div class ="control-label col-sn-2">
  <%= f.label :email%>

    </div>
    <div class ="col-sn-8">
    <%=f.email_field :email,class:"form-control",placeholder:"Enter email"%>
    </div>
    </div>
    <div class ="form-group">
      <div class ="control-label col-sn-2">
      <%= f.label :password%>

        </div>
        <div class ="col-sn-8">
        <%=f.password_field :password,class:"form-control",placeholder:"Enter password"%>
        </div>
        </div>
     <div class ="form-group">
       <div class= "col-sn-10">

      <%= f.submit(@user.new_record? ? "Sign up" :"Update account", class: "btn btn-primary btn-lg")%>
      </div>
      </div>
<% end %>
<div class= "col-xs-4 col-xs-offser-4">
<%=link_to 'Cancel requet',articles_path %>
</div>
  </div>
</div>
