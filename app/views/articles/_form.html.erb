<%=render 'shared/errors',obj:@article%>
<div class = 'row' >
  <div class = 'col-xs-8 col-xs-offset-2'>
<%= form_for @article do |f| %>
    <div class ="form-group">
      <div class ="control-label col-sn-2">
        <%= f.label :title %>
      </div>
    <div class ="col-sn-6">

   <%= f.text_field :title,class:"form-control",placeholder:"title of article",autofocus: true %>
   </div>
</div>
<div class ="form-group">
  <div class ="control-label col-sn-2">
  <%= f.label :description%>

    </div>
    <div class ="col-sn-8">
    <%=f.text_area :description,class:"form-control",rows: 10,columns:8,placeholder:"Body of article"%>
    </div>
    </div>
    <div class ="form-group">
      <div class ="row">
      <div class= "col-smoffset-2 col-sm-8" >

        <%=f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb|%>
          <% cb.label(class: "checkbox-inline input_checkbox"){cb.check_box(class:"checkbox")+cb.text}%>
        <%end%>
     </div>
     </div>
     </div>
     <div class ="form-group">
       <div class= "col-sn-10">

      <%= f.submit class:"btn btn-primary btn-lg"%>
      </div>
      </div>
<% end %>
<div class= "col-xs-4 col-xs-offser-4">
<%=link_to 'Cancel request',articles_path %>
</div>
  </div>
</div>
