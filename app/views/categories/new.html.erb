      <div class ="control-label col-sn-2">
        <%= f.label :name %>
      </div>
    <div class ="col-sn-6">

   <%= f.text_field :name,class:"form-control",placeholder:"Enter category name",autofocus: true %>
   </div>
</div>

     <div class ="form-group">
       <div class= "col-sn-10">

      <%= f.submit  class: "btn btn-primary btn-lg"%>
